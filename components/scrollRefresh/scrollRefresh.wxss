.circle-progress-bar {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 80rpx;
  align-self: center;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  box-shadow: 0 0 18rpx #ccc;
  /* 这里margin-top没有取80rpx是为了防止露出阴影部分 */
  z-index: 10;
  margin-top: -114rpx;
}

.loading {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border-bottom: 5rpx solid transparent;
  animation: loading 1.5s infinite;
}

@keyframes loading {
  0% {
    transform: rotate(0deg);
  }

  100% {
    transform: rotate(360deg);
  }
}