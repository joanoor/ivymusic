.enhance-slider {
  height: 2em;
  background: var(--main-bgcolor);
  border-radius: 10000px;
  overflow: hidden;
  border: solid 1px;
}

.enhance-slider .enhance-slider-inner {
  width: 0;
  height: 2em;
  background: var(--main-color-light);
}

.sunline {
  top: 50%;
  transform: translateY(-50%);
  left: 0.5em
}

.sunfill {
  top: 50%;
  transform: translateY(-50%);
  right: 0.5em
}