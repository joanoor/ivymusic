.colorpicker {
  overflow: hidden;
  z-index: 1;
}

.colorpicker::before,
.colorpicker::after {
  content: '';
  display: block;
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: -1;
}

.colorpicker::before {
  background: linear-gradient(to right, #fff 0%, transparent 100%);
}

.colorpicker::after {
  background: linear-gradient(to bottom, transparent 0%, #000 100%);
}

.move-gesture {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, .32);
  border: solid 8rpx rgba(255, 255, 255, .5)
}

.ribbon {
  background: -webkit-linear-gradient(left, #f00 0%, #ff0 17%, #0f0 33%, #0ff 50%, #00f 67%, #f0f 83%, #f00 100%);
  margin: 1.5em 0;
  border-radius: 10em;
}