.home-container {
  flex-wrap: nowrap;
}

scroll-view {
  background-color: #fff;
}

scroll-view.content {
  background-color: var(--main-bgcolor);
}

view.container view {
  background-color: #fff;
}

.search .van-search__content {
  border-radius: 34px;
}

.search.van-search {
  background-color: var(--main-color) !important;
}

.nav-bar.van-hairline--bottom::after,
.nav-bar2.van-hairline--bottom::after {
  border: none;
}

.nav-bar {
  z-index: 100000;
}

.overlay,
.overlay-playnow {
  position: fixed;
  width: 100%;
  height: 100vh;
  top: 0;
  left: 0;
  background-color: var(--main-overlay-background);
  z-index: 1000000
}

.overlay .ani-wrapper {
  width: 100%;
  background: transparent;
  margin-bottom: 1em;
  left: 50%;
  border-radius: 1.25em;
}

.overlay-playnow .ani-wrapper {
  width: 100%;
  background: #d9d9d9;
}

swiper,
.swiper-item {
  width: 100%;
  height: 100%;
}

.swiper-itme-card {
  border-radius: 1.3em;
  background-color: white;
  width: 98%;
  height: 100%;
  margin: 0 auto;
  padding: 0.8em;
  overflow-wrap: break-word;
  word-wrap: break-word;
  overflow: hidden;
}

.play-title {
  font-size: 40rpx;
  font-weight: 600;
  padding: 0.4em 0;
}

.play-status {
  font-size: 28rpx;
  padding: 0 0 1em;
}

.swiper-dots {
  position: absolute;
  top: -40rpx;
  left: 50%;
  transform: translateX(-50%);
}

.dot {
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.6);
  margin-right: 14rpx;
}

.dot:last-child {
  margin-right: 0
}

.dot-active {
  background-color: red;
}

.shortcut-scroll {
  padding: 1em 0;
  height: calc(150rpx + 2em + 1rpx) !important;
  /* border-bottom: solid 1rpx rgba(0, 0, 0, 0.21); */
}

.shortcut-scroll .scroll-view-block:first-child {
  margin-left: 32rpx;
}

.shortcut-scroll .scroll-view-block:last-child {
  margin-right: 32rpx !important;
}

.shortcut-scroll .block-img {
  height: 116rpx;
  width: 116rpx;
  border-radius: 50%;
  background-color: blue;
}

.shortcut-scroll .block-title {
  word-wrap: break-word;
  margin-top: 10rpx;
  line-height: 1em;
  font-size: 24rpx;
}

.card {
  overflow: hidden;
  border-radius: 0.5em;
  margin-bottom: 0.6em;
}

.song-card {
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}

.card .card--custom-scroll .scroll-view-block {
  width: 200rpx;
}

.card .card--custom-scroll .scroll-view-block:first-child {
  margin-left: 32rpx;
}

.card .card--custom-scroll .scroll-view-block:last-child {
  margin-right: 32rpx !important;
}

.card .card--custom-scroll .block-img {
  height: 210rpx;
  background-color: blue;
  border-radius: 0.5em;
}

.video-card .card--custom-scroll .block-img {
  height: 230rpx;
}

.card .card--custom-scroll .block-title {
  margin-top: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: block;
  line-height: 1.5em;
  height: 60rpx;
  white-space: pre-wrap;
  word-break: break;
  font-size: 22rpx;
}

.list-card {
  margin-bottom: 0;
  border-bottom-left-radius: 0;
  border-bottom-right-radius: 0;
}

.round {
  border: solid 1px #d9d9d9;
  padding: 4rpx 12rpx 4rpx 8rpx;
  border-radius: 999em;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.refresh .refresh-slot {
  background-color: #d9d9d9 !important;
}

.refresh .swiper-banner {
  margin-top: 1em;
}

/* 这是分割线left-page的样式 */
.user-info {
  border: solid 1px;
  border-radius: 1em;
  padding: 1em;
}


.nav-bar2 {
  width: 100%;
  position: fixed !important;
  /* background-color: red; */
  /* background-color: transparent; */
}

.holder-pic::after {
  content: '';
  display: block;
  position: absolute;
  height: 30%;
  width: 100%;
  background: linear-gradient(rgba(240, 240, 240, 0), rgba(240, 240, 240, 1));
  bottom: 0;
}




.personal-container {
  position: relative;
  z-index: 10;
  background: var(--main-bgcolor);
  box-shadow: 0px -55px 48px rgba(240, 240, 240, 0.85);
}

.avatar {
  width: 240rpx;
  height: 240rpx;
  border-radius: 50%;
  border: solid 12rpx var(--main-color-light);
  overflow: hidden;
  margin: 0 auto;
  left: 50%;
  transform: translateX(-50%) translateY(-85%);
  z-index: 99;
  filter: drop-shadow(0 0 0.18rem var(--main-color-dark));
}

.avatar-placeholder {
  height: 60rpx;
}

.avatar-placeholder+view {
  margin-top: 1em;
  margin-bottom: 1em;
}



.avatar-placeholder+view .block {
  width: 31%;
  height: 9em;
  line-height: 9em;
  text-align: center;
  background: var(--main-color-light);
}


.panel {
  background: var(--main-color-light);
  margin-top: 1em;
  margin-bottom: 1em;
  padding: 1em;
}

.panel .tasteblock {
  height: 3em;
  border-bottom: solid 1px black;
}

.panel.control {}

.control-panel {
  background: var(--main-color-light);
}